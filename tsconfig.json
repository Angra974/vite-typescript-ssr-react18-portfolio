{
  "compilerOptions": {
    "allowJs": true,
    "alwaysStrict": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "checkJs": true,
    "declaration": true,
    "declarationMap": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "incremental": true,
    "jsx": "react-jsxdev",
    "lib": ["DOM", "ESNext"],
    "strict": true,
    "outDir": "dist",
    "module": "CommonJS",
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "target": "ES2020",
    "paths": {
      "~/*": ["*"],
      "@/*": ["src/client/*"],
      "@app/*": ["src/client/app/*"],
      "@assets/*": ["src/client/assets/*"],
      "@components/*": ["src/client/components/*"],
      "@controllers/*": ["src/client/controllers/*"],
      "@helpers/*": ["src/client/helpers/*"],
      "@hooks/*": ["src/client/hooks/*"],
      "@shared/*": ["src/client/shared/*"],
      "@services/*": ["src/client/services/*"],
      "@stylesheets/*": ["src/client/stylesheets/*"],
      "@routes/*": ["src/client/routes/*"],
      "@translations/*": ["public/locales/*"]
    }
  },
  "include": ["src/**/*", "types/*", "**.ts"],
  "exclude": ["node_modules", "src/**/*.spec.ts", "src/**/*.test.ts"]
}
